@model List<BExIS.Modules.Rdb.UI.Models.LabelModel>
@{
    ViewBag.Title = "GeneratorView";

    int pageLimit = 4;
}

@for (int j = 0; j < Model.Count; j += pageLimit)
{
    var list = Model.Skip(j).Take(pageLimit).ToList();

    <!--A4 210 x 297 mm - a7 52 x 74-->
    <div class="a4-page">

        <div class="a4-page-content">
            @if (list.Count > 0)
            {
                <table>

                    @for (int i = 0; i < list.Count; i = i + 2)
                    {
                        <tr>
                            <td>@Html.Partial("QRCodeV2View", list[i])</td>
                            @if ((i + 1) < list.Count)
                            {
                                <td>@Html.Partial("QRCodeV2View", list[i + 1])</td>
                            }

                        </tr>
                    }

                </table>
            }
        </div>
    </div>
}


<style>

    table {
        font-size: 20pt;
    }

    body, table, tr, td {
        margin: 0;
        padding: 0;
        border: none 0px;
        border-spacing: 0px;
    }

    .a4-page {
        /*border: 0.1mm #red;
        border-style: groove;*/
        width: 297mm;
        height: 210mm;
        font-size: 25pt;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        background-color: white;
    }

    .a4-page-content {
    }

    .qr-content {
        margin: -55mm 0mm 0 50mm;
    }


    .qr-label {
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        border-bottom: 0.1mm dotted #000000;
        border-left: 0.1mm dotted #000000;
        width: 148.5mm;
        height: 105mm;
        background-color: white;
        /*margin: 1mm;*/
    }

    .qr-label-text-container {
        padding: 20pt 10pt 20pt 20pt;
    }

    .qr-label-id {
        text-align: left;
        padding: 0pt 0pt 0pt 20pt;
        font-weight: bold;
    }

    .qr-label-plot {
        text-align: left;
        padding: 0pt 0pt 0pt 20pt;
    }

    .qrcode {
        padding: 5mm;
    }

    .qrcode img {
        width: 50mm;
        height: 50mm;
    }
</style>

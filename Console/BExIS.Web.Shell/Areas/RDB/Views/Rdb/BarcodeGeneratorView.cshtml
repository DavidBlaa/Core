@model List<BExIS.Modules.Rdb.UI.Models.BarCodeLabelModel>
@{
    ViewBag.Title = "BarcodeGeneratorView";

}
<!--A4 210 x 297 mm - a7 52 x 74-->
<div class="a4-page">
    @foreach (var barcodeLabel in Model)
    {
        @Html.Partial("BarcodeLabelView", barcodeLabel)
    }
</div>


<style>

    .a4-page {
        border: 0.1mm #red;
        border-style: groove;
        width: 210mm;
        height: 297mm;
        font-size: 7pt;
        font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
    }

    .barcode-content {
        margin: -24mm 0mm 0 20mm;
    }


    .barcode-label {
        border: 0.1mm dotted #000000;
        width: 60mm;
        height: 24mm;
        margin: 1mm;
    }

    .barcode-label-text-container {
        padding: 20pt 10pt 20pt 20pt;
    }

    .barcode-label-id {
        text-align: left;
        padding: 0pt 0pt 0pt 20pt;
        font-weight:bold;
    }

    .barcode-label-plot {
        text-align: left;
        padding: 0pt 0pt 0pt 20pt;
    }

    .qrcode {
        margin: -1mm 0mm 0 0mm;
    }
</style>
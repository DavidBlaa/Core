@using Telerik.Web.Mvc.UI
@using Vaiona.Web.Mvc.Modularity

@model BExIS.Modules.Sam.UI.Models.FolderModel

@using (Ajax.BeginForm("CreateFolder", "Files", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "content_createFolder", OnSuccess = "createFolder_onSuccess" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<table class="bx-table-form">
    @Html.HiddenFor(m=>m.Path)
    <tr>
        <td>
            @Html.LabelFor(m => m.Name)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Name, new { @class = "t-input bx-input" })
            @Html.ValidationMessageFor(m => m.Name)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.DisplayName)
        </td>
        <td>
            @Html.TextBoxFor(m => m.DisplayName, new { @class = "t-input bx-input" })
            @Html.ValidationMessageFor(m => m.DisplayName)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Description)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Description, new { @class = "t-input bx-input" })
            @Html.ValidationMessageFor(m => m.Description)
        </td>
    </tr>
</table>

    <div class="bx-footer right">
        <button style="margin-right: 1px" type="submit" class="bx-button action">Save</button>
        <button style="margin-left: 1px" type="button" id="button_createFolder_cancel" class="bx-button action">Cancel</button>
    </div>
}
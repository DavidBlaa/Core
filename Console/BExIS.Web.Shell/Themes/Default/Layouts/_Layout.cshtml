@using BExIS.Web.Shell.Areas.SAM.Helpers
@using FluentBootstrap
@using Microsoft.Web.Helpers;
@using Telerik.Web.Mvc.UI;
@using Vaiona.Web.Mvc;


<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    @Html.Favicon(Html.GetTenant().FavIconPath)

    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-migrate-1.2.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQueryUI/1.10.3/js/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Scripts/jQueryUI/1.10.3/css/smoothness/jquery-ui-1.10.3.custom.min.css")" rel="stylesheet" type="text/css" />
    
    <link href="@Url.Content("~/Scripts/switchery/switchery.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/switchery/switchery.js")" type="text/javascript"></script>



    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

    
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/bootstrap-slider.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/bootstrap-slider.min.css")" rel="stylesheet" type="text/css"/>

    <script src="@Url.Content("~/Scripts/minimap/minimap.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Scripts/minimap/minimap.min.css")" rel="stylesheet" type="text/css" />

    <style>
        .t-window-content
        {
           height: auto !important;
           width: auto !important;
        }
    </style>
    
    @*<link href="@Url.Content(Themes.GetResourcePath("Styles","BEXIS_Telerik.css"))" rel="stylesheet" type="text/css" />*@

    @RenderSection("Scripts", false)

    @(Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group
                .DefaultPath(Themes.ThemeDirectory) //  "~/Themes/" 

                        .Add("~" + Themes.GetResourcePath("Styles", "bexis-jquery-ui.css"))
                        .Add("~" + Themes.GetResourcePath("Styles", "bexis-font-awesome-extension.css"))
                        .Add("~" + Themes.GetResourcePath("Styles", "bexis-elements.css"))
                        .Add("~" + Themes.GetResourcePath("Styles", "bexis-telerik.css"))
                        .Add("~" + Themes.GetResourcePath("Styles", "bexis-metadata.css"))

        //.Add("telerik.common.css")
        //.Add("~" + Themes.GetResourcePath("Styles", "Copy of telerik.default.min.css")) 
        //.Add("~" + Themes.GetResourcePath("Styles", "telerik.default.min.css")) 
        //.Add(Themes.GetResourcePath("Styles", "mycss.css"))
        // add RTL support when internationalization is enabled
        .Combined(true)
        .Compress(true)))

    
</head>

<body>
    <div id="informationContainer">
        @Html.RenderAuto("Menu")

        <div class="container-fluid" style="background-color: black; color: white; position: fixed; width: 100%; z-index: 1336">
            <a href="#information" data-toggle="collapse" style="color: white">@ViewBag.Title <i class="fa fa-angle-double-down"></i></a>
            <div class="collapse" id="information">
                <div class="container" style="padding: 0pt 48pt 24pt 48pt; text-align: justify;">
                    @RenderSection("Information", false)
                </div>
            </div>
        </div>
    </div>

    @*<div class="container-fluid">
        @Html.RenderAuto("Breadcrumb")
    </div>*@

    <div class="container-fluid" style="margin-top: 36pt; width: 100%;">
        <table style="table-layout: fixed;">
            <tr>

                @if (IsSectionDefined("LeftPane"))
                {
                    <td style="border-top: #9B9B9B solid thin; border-bottom: #9B9B9B solid thin; padding: 12pt 0 12pt 0; width: 250px; max-width: 350px; vertical-align: top;">
                        <div>
                            @RenderSection("LeftPane", false)
                        </div>
                    </td>
                    <td style="width: 20pt; border: none" />
                }

                <td style="border-top: #9B9B9B solid thin; border-bottom: #9B9B9B solid thin; padding: 12pt 0 12pt 0; vertical-align: top;">
                    <div>
                        @RenderBody()
                    </div>

                </td>

                @if (IsSectionDefined("RightPane"))
                {
                    <td style="width: 20pt; border: none" />

                    <td style="border-top: #9B9B9B solid thin; border-bottom: #9B9B9B solid thin; padding: 12pt 0 12pt 0; width: 250px; max-width: 350px; vertical-align: top;">
                        <div>
                            @RenderSection("RightPane", false)
                        </div>
                    </td>
                }
            </tr>
        </table>
    </div>
    
    @(Html.Telerik().ScriptRegistrar()
        .DefaultGroup(group => group.Combined(true).Compress(true)
            //.DefaultPath("~/Scripts/2012.3.1018")
            )
        .jQuery(false)
      )
    @Html.RenderAuto("Footer")
</body>
</html>

<script src="@Url.Content("~/Scripts/bexis_default.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/bexis-jquery-ui.js")" type="text/javascript"></script>
<script type="text/javascript">

    $(document)
        .ready(function() {
            resetAllTelerikIconTitles();
            addTooltips();
        });

</script>
